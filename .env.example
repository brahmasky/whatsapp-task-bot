# TPG Credentials (optional - can use macOS Keychain instead)
TPG_USERNAME=your_username
TPG_PASSWORD=your_password

# Playwright settings
HEADLESS=true

# Timeouts
SMS_TIMEOUT_MINUTES=5

# Bot settings (optional - defaults to self-messages only)
# Set to comma-separated phone numbers to allow specific users
# ALLOWED_USERS=61400000000,61400000001

# Email settings (Gmail SMTP)
SMTP_USER=your.email@gmail.com
SMTP_PASS=xxxx xxxx xxxx xxxx
EMAIL_RECIPIENT=recipient@example.com
